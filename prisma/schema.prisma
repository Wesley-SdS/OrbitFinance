generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Better Auth Models
model User {
  id            String         @id @default(cuid())
  email         String         @unique
  emailVerified Boolean        @default(false) @map("email_verified")
  name          String?
  image         String?
  phone         String?        @unique
  createdAt     DateTime       @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime       @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Better Auth relations
  accounts      Account[]
  sessions      Session[]
  verification  Verification[]

  // App specific relations
  financialAccounts FinancialAccount[]
  categories        Category[]
  transactions      Transaction[]
  goals             Goal[]
  aiInsights        AiInsight[]
  // Organizer & messaging
  reminders         Reminder[]
  messageLogs       MessageLog[]
  tasks             Task[]
  events            Event[]

  @@map("users")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String    @map("user_id")
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt             DateTime  @updatedAt @map("updated_at") @db.Timestamptz(6)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("accounts")
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at") @db.Timestamptz(6)
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime @map("expires_at") @db.Timestamptz(6)
  userId     String?  @map("user_id")
  createdAt  DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt  DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([identifier, value])
  @@map("verification")
}

// App Specific Models
model FinancialAccount {
  id        String      @id @default(cuid())
  userId    String      @map("user_id")
  name      String
  type      AccountType
  balance   Decimal     @default(0) @db.Decimal(15, 2)
  currency  String      @default("USD")
  color     String      @default("#3b82f6")
  icon      String      @default("wallet")
  isActive  Boolean     @default(true) @map("is_active")
  createdAt DateTime    @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime    @updatedAt @map("updated_at") @db.Timestamptz(6)

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@map("financial_accounts")
}

model Category {
  id        String       @id @default(cuid())
  userId    String       @map("user_id")
  name      String
  type      CategoryType
  color     String       @default("#6b7280")
  icon      String       @default("tag")
  isSystem  Boolean      @default(false) @map("is_system")
  createdAt DateTime     @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime     @updatedAt @map("updated_at") @db.Timestamptz(6)

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@unique([userId, name, type])
  @@map("categories")
}

model Transaction {
  id                String            @id @default(cuid())
  userId            String            @map("user_id")
  financialAccountId String           @map("financial_account_id")
  categoryId        String            @map("category_id")
  type              TransactionType
  amount            Decimal           @db.Decimal(15, 2)
  description       String?
  date              DateTime          @default(now()) @db.Date
  notes             String?
  createdAt         DateTime          @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt         DateTime          @updatedAt @map("updated_at") @db.Timestamptz(6)

  user             User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  financialAccount FinancialAccount @relation(fields: [financialAccountId], references: [id], onDelete: Cascade)
  category         Category         @relation(fields: [categoryId], references: [id])
  attachments      Attachment[]

  @@map("transactions")
}

model Goal {
  id            String    @id @default(cuid())
  userId        String    @map("user_id")
  name          String
  targetAmount  Decimal   @map("target_amount") @db.Decimal(15, 2)
  currentAmount Decimal   @default(0) @map("current_amount") @db.Decimal(15, 2)
  deadline      DateTime? @db.Date
  category      String    @default("savings")
  color         String    @default("#10b981")
  icon          String    @default("target")
  isCompleted   Boolean   @default(false) @map("is_completed")
  createdAt     DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime  @updatedAt @map("updated_at") @db.Timestamptz(6)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("goals")
}

model AiInsight {
  id          String          @id @default(cuid())
  userId      String          @map("user_id")
  insightType InsightType     @map("insight_type")
  title       String
  content     String
  priority    InsightPriority @default(medium)
  isRead      Boolean         @default(false) @map("is_read")
  createdAt   DateTime        @default(now()) @map("created_at") @db.Timestamptz(6)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("ai_insights")
}

// Enums
enum AccountType {
  checking
  savings
  credit_card
  cash
  investment
  other
}

enum CategoryType {
  income
  expense
}

enum TransactionType {
  income
  expense
  transfer
}

enum InsightType {
  spending_pattern
  saving_tip
  budget_alert
  goal_progress
  general
}

enum InsightPriority {
  low
  medium
  high
}

// New app models for WhatsApp assistant parity

model Attachment {
  id            String         @id @default(cuid())
  transactionId String         @map("transaction_id")
  kind          AttachmentKind
  url           String
  providerId    String?
  createdAt     DateTime       @default(now()) @map("created_at") @db.Timestamptz(6)

  transaction   Transaction    @relation(fields: [transactionId], references: [id], onDelete: Cascade)

  @@map("attachments")
}

enum AttachmentKind {
  IMAGE
  AUDIO
  PDF
}

model Reminder {
  id        String          @id @default(cuid())
  userId    String          @map("user_id")
  text      String
  when      DateTime        @db.Timestamptz(6)
  status    ReminderStatus  @default(PENDING)
  createdAt DateTime        @default(now()) @map("created_at") @db.Timestamptz(6)

  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([when, status])
  @@map("reminders")
}

enum ReminderStatus {
  PENDING
  SENT
  CANCELED
}

model MessageLog {
  id         String            @id @default(cuid())
  userId     String?           @map("user_id")
  providerId String?           @unique @map("provider_id")
  direction  MessageDirection
  type       MessageType
  content    String?
  createdAt  DateTime          @default(now()) @map("created_at") @db.Timestamptz(6)

  user       User?             @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("message_logs")
}

enum MessageDirection {
  INBOUND
  OUTBOUND
}

enum MessageType {
  TEXT
  IMAGE
  AUDIO
  DOCUMENT
}

model Task {
  id        String       @id @default(cuid())
  userId    String       @map("user_id")
  text      String
  dueAt     DateTime?    @map("due_at") @db.Timestamptz(6)
  priority  TaskPriority @default(medium)
  status    TaskStatus   @default(open)
  createdAt DateTime     @default(now()) @map("created_at") @db.Timestamptz(6)

  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([status, dueAt])
  @@map("tasks")
}

enum TaskPriority {
  low
  medium
  high
}

enum TaskStatus {
  open
  done
  canceled
}

model Event {
  id        String    @id @default(cuid())
  userId    String    @map("user_id")
  title     String
  startAt   DateTime  @map("start_at") @db.Timestamptz(6)
  endAt     DateTime? @map("end_at") @db.Timestamptz(6)
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([startAt])
  @@map("events")
}
